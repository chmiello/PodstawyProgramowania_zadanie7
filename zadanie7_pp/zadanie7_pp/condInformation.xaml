<Window x:Class="zadanie7_pp.condInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cond information" Height="300" Width="300" SizeToContent="Width">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="InfoLabel" Content="Informacje:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="69"/>
        <Label x:Name="WriteInfoLabel" Content="" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Top"/>
        <DataGrid x:Name="notGrid" HorizontalAlignment="Left" Margin="-2,1,0,0" Grid.Row="2" VerticalAlignment="Top" RenderTransformOrigin="-0.167,-0.692" IsReadOnly="True"/>

    </Grid>
</Window>
